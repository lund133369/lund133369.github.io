---
// src/layouts/SavinoteLayout.astro
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title} | Savinotes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style >
      body {
        font-family: system-ui, sans-serif;
        line-height: 1.3;
        max-width: 80vw;
        margin: 2rem auto;
        padding: 1rem;
        background: #f9f9f9;
        color: #222;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      h1 {
        font-size: 2rem;
        margin-bottom: 0.2rem;
      }
      time {
        color: #888;
        font-size: 0.9rem;
      }
      .content pre {
        background: #272822;
        color: #f8f8f2;
        padding: 1em;
        border-radius: 5px;
        overflow-x: auto;
      }
      .content table {
        width: 100%;
        border-collapse: collapse;
      }
      .content th,
      .content td {
        border: 1px solid #ddd;
        padding: 0.5rem;
        text-align: left;
      }
      .content img {
        max-width: 100%;
        height: auto;
      }
      a {
        color: #0059b2;
      }
      pre {
  background-color: #2d2d2d;
  color: #ccc;
  padding: 1rem;
  border-radius: 6px;
  overflow-x: auto;
  margin: 1em 0;
  font-family: monospace;
  font-size: 0.9rem;
  line-height: 1.4;
}

code {
  font-family: monospace;
}

table {
  border-collapse: collapse;
  width: 100%;
  margin: 1em 0;
}

table th, table td {
  border: 1px solid #ccc;
  padding: 0.5em 1em;
  text-align: left;
}

table th {
  background-color: #f5f5f5;
}

    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
