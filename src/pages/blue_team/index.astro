---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const blue_team_post = await getCollection("blue_team");
console.log("posts:", typeof blue_team_post);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li:first-child {
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
        max-height: 360px;
        object-fit: cover;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }

      /* C칩digo en bloque */
      pre {
        background: linear-gradient(135deg, #1f1f1f, #2c2c2c);
        padding: 10px !important;
        border-radius: 8px !important;
        overflow-x: auto;
        margin: 1.5rem 0;
        font-size: 0.95rem;
        box-shadow: 0 0 10px #000;
        white-space: pre-wrap; /* Opcional: para envolver texto largo */
      }

      /* C칩digo dentro de pre */
      pre code {
        display: block;
        padding: 10px !important; /* El padding se lo damos al <pre> */
        border-radius: 8px !important;
        background: none; /* Evita doble fondo */
        color: inherit;
        font-family: "Fira Code", monospace;
      }

      /* C칩digo inline */
      code:not(pre code) {
        background-color: #2a2a2a;
        padding: 10px !important;
        border-radius: 4px !important;
        font-family: "Fira Code", monospace;
        color: #f8f8f2;
        font-size: 0.95em;
      }

      /* Listas */
      ul,
      ol {
        padding-left: 2rem;
        margin-bottom: 1rem;
      }

      li {
        margin-bottom: 0.5rem;
      }

      /* P치rrafos */
      p {
        margin: 1rem 0;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <ul>
          {
            blue_team_post.map((post) => (
              <li>
                <a href={`/blog/${post.id}/`}>
                  <img  width={720} height={360} src={post.data.heroImage} alt="" />
                  <h4 class="title">{post.data.title}</h4>
              
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
