---

<!-- Prism.js CSS (tema oscuro) -->
<link href="https://cdn.jsdelivr.net/npm/prismjs@1/themes/prism-tomorrow.min.css" rel="stylesheet" />

<style is:global>
  /* Fuente moderna */
  @import url("https://fonts.googleapis.com/css2?family=Fira+Code&display=swap");

  * {
    box-sizing: border-box;
  }

  body {
    font-family: "Fira Code", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background-color: #121212;
    color: #e0e0e0;
    min-height: 100vh;
    margin: auto;
    padding: auto;
  }

  main {
    max-width: 900px;
    width: 100%;
    padding: 2rem;
    background-color: #1a1a1a;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
  }

  /* Titulares */
  h1,
  h2,
  h3,
  h4 {
    color: #ffcc00;
    margin-bottom: 1rem;
    border-bottom: 1px solid #333;
    padding-bottom: 0.3rem;
  }

  /* Enlaces */
  a {
    color: #4fc3f7;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Imágenes */
  img {
    max-width: 100%;
    border-radius: 10px;
    box-shadow: 0 0 10px #000;
    margin: 1rem 0;
  }

  /* Tablas */
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  th,
  td {
    border: 1px solid #444;
    padding: 0.8rem;
    text-align: left;
  }

  th {
    background-color: #222;
    color: #ffcc00;
  }

  td {
    background-color: #1c1c1c;
  }

  /* Código en bloque */
  pre {
    background: linear-gradient(135deg, #1f1f1f, #2c2c2c);
    padding: 10px !important;
    border-radius: 8px !important;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.95rem;
    box-shadow: 0 0 10px #000;
    white-space: pre-wrap; /* Opcional: para envolver texto largo */
  }

  /* Código dentro de pre */
  pre code {
    display: block;
    padding: 10px !important; /* El padding se lo damos al <pre> */
    border-radius: 8px !important;
    background: none; /* Evita doble fondo */
    color: inherit;
    font-family: "Fira Code", monospace;
  }

  /* Código inline */
  code:not(pre code) {
    background-color: #2a2a2a;
    padding: 10px !important;
    border-radius: 4px !important;
    font-family: "Fira Code", monospace;
    color: #f8f8f2;
    font-size: 0.95em;
  }

  /* Listas */
  ul,
  ol {
    padding-left: 2rem;
    margin-bottom: 1rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  /* Párrafos */
  p {
    margin: 1rem 0;
  }

  /* Citas */
  blockquote {
    border-left: 4px solid #ffcc00;
    padding-left: 1rem;
    color: #ccc;
    font-style: italic;
    background-color: #1a1a1a;
    margin: 1rem 0;
  }

  /* Líneas divisorias */
  hr {
    border: none;
    border-top: 1px solid #333;
    margin: 2rem 0;
  }
  .back-button {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 1rem;
    left: 1rem;
    color: #ffcc00;
    background-color: rgba(26, 26, 26, 0.8);
    border-radius: 5px;
    z-index: 1000;
    transition: background-color 0.3s ease;
    font-size: 1rem;
  }

  .sr-only {
    font-size: small;
  }

  .back-button:hover {
    background-color: rgba(255, 204, 0, 0.2);
  }
</style>

<a href="/savinotes" class="back-button" aria-label="Volver atrás">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"
    ><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg
  >

  <span class="sr-only">Volver atras</span>
</a>

<SavinoteLayout title={entry.data.title}>
  <ClientRouter />
  <article>
    <img transition:name={`img-${slug}`} width={720} height={360} src={note.heroImage ?? "/assets/machines.jpg"} alt="" />
    <h1>{entry.data.title}</h1>
    <time>{entry.data.date?.toDateString?.() ?? "Sin fecha"}</time>
    <div class="content" set:html={entry.rendered?.html} />
  </article>
</SavinoteLayout>
